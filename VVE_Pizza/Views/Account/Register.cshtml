@model RegisterViewModel

<form method="post" asp-controller="Account" asp-action="Register" class="container">
        <h1>Регистрация</h1>
        <hr>
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="Email"></label><br />
            <input asp-for="Email"/>
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label asp-for="Password"></label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="PasswordConfirm"></label><br />
            <input asp-for="PasswordConfirm" />
            <span asp-validation-for="PasswordConfirm"></span>
        </div>
        <div>
            <label asp-for="Name"></label><br />
            <input asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </div>
        <div>
            <label asp-for="Phone"></label><br />
            <input asp-for="Phone" />
            <span asp-validation-for="Phone"></span>
        </div>
        <div>
            <label asp-for="Address"></label><br />
            <input asp-for="Address" />
            <span asp-validation-for="Address"></span>
        </div>        
        <div class="clearfix">
            <button type="submit" class="signupbtn">Зарегистрировать</button>
            <a asp-controller="Home" asp-action="Index" class="btn">Назад</a>
    </div>
</form>

@section RegStyle
    {
    <link rel="stylesheet" href="~/css/registration.css" asp-append-version="true" />
}