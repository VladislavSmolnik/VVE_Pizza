@model List<PizzaViewModel>

@{
    ViewData["Title"] = "Home Page";
}




    @if (Model.Any())
{
    <div class="container mt-5">
        <div class="row">
           

    @foreach (var pizza in Model)
    {
                <div class="col-md-3">
                    <div class="product">
                        <div class="image">
                            <img style='width:300px; height:300px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(pizza.Photo))" alt="">
                        </div>
                        <div class="info">
                            <h3>@pizza.Name</h3>
                            <h5>@pizza.Size</h5>
                            <div class="info-price">
                                <span class="price">@pizza.Price <small>BYN</small></span>
                                <button class="show"><a asp-controller="Pizza" asp-action="Show" asp-route-id="@pizza.Id">Показать</a></button>
                            </div>
                        </div>
                    </div>
                </div>       
    }
        </div>
    </div>

}



@section PizzaListStyle
    {
    <link rel="stylesheet" href="~/css/pizzaList.css" asp-append-version="true" />
}

